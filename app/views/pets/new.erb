<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  Name: <input type="text" name="pet[name]" id="pet_name" value="">

  <!-- create chekboxes of existing Users -->
    <br></br>

    Existing Users:
    <br></br>

  <% @owners.each do |owner| %>
      <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" > <%= owner.name %> </>
  <% end  %>

    <br></br>
    And or crate a new owner:
    <br></br>
      <input type="text" name="owner[name]" id="owner_name" value="">
      <br></br>

  <input type="submit" name="" value="Create Pet">
</form>
