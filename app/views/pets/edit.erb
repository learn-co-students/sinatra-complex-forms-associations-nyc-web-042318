<h1>Update Pet</h1>

<form  action="/pets/<%= @pet.id %>" method="post">
    Name: <input type="text" name="pet[name]" id="pet_name" value="">

    <!-- create chekboxes of existing Users -->
      <br></br>

      Existing Users:
      <br></br>

    <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>"
        <% if owner.id == @pet.owner_id  %>
          checked
        <%end  %>
        > <%= owner.name %> </>
    <% end  %>

      <br></br>
      And or crate a new owner:
      <br></br>
        <input type="text" name="owner[name]" id="owner_name" value="">
        <br></br>

    <input type="submit" name="" value="Update Pet">
  </form>
