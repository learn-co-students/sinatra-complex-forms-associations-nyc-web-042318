<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br/>
  <label>Choose an existing owner:</label>
  <br/>
  <%Owner.all.each do |owner|%>
    <% if owner.pet_ids.include?(@pet.id) %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" checked ><%=owner.name%></input>
    <% else %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
    <%end%>
  <%end%>

  <br/>
  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br/>
  <input type="submit" value="Update Pet">
</form>
